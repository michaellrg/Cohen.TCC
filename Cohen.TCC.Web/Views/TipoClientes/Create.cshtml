@model Cohen.TCC.Dominio.TipoCliente

@{
    Layout = "~/Views/Shared/_DashboardDados.cshtml";
    ViewBag.Title = "Tipo Cliente - Create";
}



                    @using (Html.BeginForm("Create", "TipoClientes",FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form" }))
                    {
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.nm_tipo, htmlAttributes: new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.EditorFor(model => model.nm_tipo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nm_tipo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.nm_descricao, htmlAttributes: new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.EditorFor(model => model.nm_descricao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nm_descricao, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                        

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" value="Salvar" class="btn btn-default" />
                            </div>
                        </div>
                    
                    }
              
    <div>
        @Html.ActionLink("Voltar a lista", "Index")
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
